# =============================================================
# POA Eventos — Variáveis de Ambiente
# Copie este arquivo para .env e preencha os valores reais.
# NUNCA commite o .env no repositório.
# =============================================================

# ---- Django ----
SECRET_KEY=your-very-secret-key-change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ---- Banco de dados ----
POSTGRES_DB=poa_eventos
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgis://postgres:postgres@db:5432/poa_eventos

# ---- Redis / Celery ----
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ---- Mapbox ----
# Token de escopo restrito para uso no frontend (URL restrictions configuradas no dashboard Mapbox)
MAPBOX_PUBLIC_TOKEN=pk.your_mapbox_public_token_here
# Token full para uso server-side (geocoding reverso etc.)
MAPBOX_SECRET_TOKEN=sk.your_mapbox_secret_token_here

# ---- Google OAuth2 ----
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
# URL de callback registrada no Google Cloud Console
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback/

# ---- E-mail ----
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=POA Eventos <noreply@poaeventos.com.br>

# ---- CORS ----
# Origens permitidas separadas por vírgula
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# ---- Storage (S3) — opcional ----
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=

# ---- Frontend URL (para links em e-mails) ----
FRONTEND_URL=http://localhost:8080

# ---- Sentry (opcional) ----
SENTRY_DSN=
